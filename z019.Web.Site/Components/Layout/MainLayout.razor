@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MainAppBar OnDrawerOpenChanged="_ => drawerOpen = !drawerOpen" />
    <MainSideBar DrawerOpen="@drawerOpen" />
    <MudMainContent>
        <main class="px-3">
            @Body
        </main>
    </MudMainContent>
</MudLayout>

@code {
    bool drawerOpen = true;
}

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
